$_ =`cat CVS/Root`;
chomp($rep =`cat CVS/Repository`);
($cvsroot) = m,(/.*),;

open(P, "cvs status 2>/dev/null |") or die;
while(<P>) {
    next unless m#^\s+Repository revision:.*$cvsroot/$rep/(.*),v#o;
    next if $1 =~ m#/Attic/#;
    print "$1\n";
} 

